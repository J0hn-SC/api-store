generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}



enum Role {
  MANAGER
  CLIENT
  DELIVERY
}

enum OrderStatus {
  PENDING
  PAID
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentMethod {
  PAYMENT_LINK
  PAYMENT_CUSTOM
}

enum EntityStatus {
  ACTIVE
  DISABLED
  PENDING
  SUSPENDED
}

enum PromoCodeStatus {
  ACTIVE
  DISABLED
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

enum CartStatus {
  ACTIVE
  ORDERED
  ABANDONED
}



model User {
  id              String    @id @default(uuid())
  email           String    @unique
  password        String
  firstName       String?
  lastName        String?
  role            Role      @default(CLIENT)

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  sessions        UserSession[]
  passwordResets  PasswordReset[]
  orders          Order[]
  addresses          Address[]
  cart            Cart?
  likedProducts   ProductLike[]
  assignedOrders  Order[]   @relation("DeliveryAssigned")

}

model Address {
  id          String   @id @default(uuid())
  address     String
  city        String
  country     String
  phoneNumber String?
  postalCode  String?
  
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UserSession {
  id             String    @id
  userId         String    
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  tokenHash      String    @unique
  expiresAt      DateTime  @db.Timestamptz(3)
  createtAt      DateTime  @default(now())

  deviceInfo     String?   
  ipAddress      String?

  isRevoked      Boolean   @default(false)

  @@index([userId])
}

model PasswordReset {
  id             String     @id @default(uuid())
  userId         String    
  user           User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  tokenHash      String     @unique
  expiresAt      DateTime   
  createdAt      DateTime   @default(now())
  usedAt         DateTime?  @db.Timestamptz(3)

  @@index([userId])
}


model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10,2)
  stock       Int
  status      EntityStatus @default(ACTIVE)

  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  images      ProductImage[]
  orderItems  OrderItem[]
  likedBy     ProductLike[]
  cartItems   CartItem[]
}


model ProductImage {
  id        String   @id @default(uuid())
  url       String
  productId String
  product   Product  @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())
}


model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  products  Product[]
}


model ProductLike {
  userId    String
  productId String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])

  @@id([userId, productId])
}

model PromoCode {
  id               String       @id @default(uuid())
  code             String       @unique
  discountType     DiscountType
  discountValue    Decimal      @db.Decimal(10,2)

  expirationDate   DateTime?
  usageLimit       Int?
  usageCount       Int          @default(0)

  minimumPurchaseAmount  Decimal?     @db.Decimal(10,2)

  status           PromoCodeStatus      @default(ACTIVE)

  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  carts           Cart[]
}

model Cart {
  id        String          @id @default(uuid())
  userId    String          @unique
  status    CartStatus      @default(ACTIVE)
  promoCodeId   String?

  user      User              @relation(fields: [userId], references: [id])
  items         CartItem[]
  promoCode     PromoCode?    @relation(fields: [promoCodeId], references: [id])
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

model CartItem {
  id        String   @id @default(uuid())
  cartId    String
  productId String
  quantity  Int

  cart      Cart     @relation(fields: [cartId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])

  @@unique([cartId, productId])
}



model Order {
  id              String        @id @default(uuid())
  orderNumber     Int           @unique @default(autoincrement())
  userId          String
  status          OrderStatus   @default(PENDING)
  tax         Decimal         @db.Decimal(10,2)
  subtotal    Decimal         @db.Decimal(10,2)
  discount    Decimal         @db.Decimal(10,2)
  total       Decimal         @db.Decimal(10,2)
  currency     String          @default("USD")
  
  promoCodeSnapshot           String?
  shippingAddressSnapshot     String?

  paymentMethod       PaymentMethod?
  paymentMethodType   String?
  paymentIntentId     String?
  paymentSessionId    String?

  deliveryUserId    String?
  deliveryUser      User?        @relation("DeliveryAssigned", fields: [deliveryUserId], references: [id])

  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  user            User          @relation(fields: [userId], references: [id])
  items            OrderItem[]
  statusHistory    OrderStatusHistory[]
}


model OrderItem {
  id         String   @id @default(uuid())
  orderId    String
  productId  String
  nameAtPurchase       String
  priceAtPurchase       Decimal  @db.Decimal(10,2)
  quantity    Int
  tax         Decimal  @db.Decimal(10,2)

  order      Order    @relation(fields: [orderId], references: [id])
  product    Product  @relation(fields: [productId], references: [id])
}


model OrderStatusHistory {
  id        String       @id @default(uuid())
  orderId   String
  status    OrderStatus
  changedBy String?      // userId
  createdAt DateTime     @default(now())

  order     Order        @relation(fields: [orderId], references: [id])
}

